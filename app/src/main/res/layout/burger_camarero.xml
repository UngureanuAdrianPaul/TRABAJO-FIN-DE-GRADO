<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content" android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/closeWaiterSessionButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F9A71A"
            android:fontFamily="@font/advent_pro_semibold"
            android:gravity="center"
            android:text="Cerrar SesiÃ³n"
            android:textColor="#A20A0A"
            android:textSize="20sp" />

        <Button
            android:id="@+id/printBillButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#F9A71A"
            android:fontFamily="@font/advent_pro_semibold"
            android:gravity="center"
            android:text="Imprimir Comanda"
            android:textAlignment="center"
            android:textColor="#2B2B2B"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>